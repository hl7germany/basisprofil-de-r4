    </element>
    <element id="Coding.code">
      <path value="Coding.code" />
      <short value="Der OPS-Code" />
      <min value="1" />
      <example>
        <label value="Einfacher OPS-Code" />
        <valueCode value="5-470" />
      </example>
    </element>
  </differential>
